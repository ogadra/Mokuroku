{
  "name": "Mokuroku",
  "version": "1.0.0",
  "description": "Speaking schedule website",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "scripts": {
    "test": "vitest",
    "dev": "vite",
    "build": "vite build --mode client && vite build --mode server",
    "build:client": "vite build --mode client",
    "build:server": "vite build --mode server",
    "deploy": "pnpm build && wrangler deploy",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "typecheck": "tsgo --noEmit",
    "typecheck:test": "tsgo -p test/tsconfig.json --noEmit",
    "typegen": "wrangler types",
    "generate": "drizzle-kit generate",
    "migrate": "wrangler d1 migrations apply mokuroku --local",
    "migrate:prd": "wrangler d1 migrations apply mokuroku --remote",
    "db:studio": "npx cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio"
  },
  "dependencies": {
    "@std/uuid": "jsr:^1.1.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.20.3",
    "@cloudflare/vitest-pool-workers": "^0.12.1",
    "@cloudflare/workers-types": "^4.20260103.0",
    "@hono/cli": "^0.1.8",
    "@hono/vite-dev-server": "^0.24.0",
    "@libsql/client": "^0.17.0",
    "@typescript/native-preview": "7.0.0-dev.20260112.1",
    "drizzle-kit": "^0.31.8",
    "oxfmt": "^0.24.0",
    "vite": "^7.3.1",
    "vitest": "3.2.4",
    "wrangler": "^4.54.0"
  },
  "packageManager": "pnpm@10.26.1"
}
